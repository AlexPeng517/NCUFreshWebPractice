doctype html
html
	head
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous") 
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		
		title= signin
	body


		div(style='float:left;margin:10px;')
			button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/'") Home

			button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/users/testbootstrap'") testbootstrap

			
			
		div(style='float:right')
			if(username && authenticated)
				button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/users/signout'") Sign Out
				button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/users/add_article'") Add Article
				button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/users/profile'") Profile
				
				//a(href='/users/signout', style='margin:10px;') Sign Out
				//a(href='/users/add_article', style='margin:10px;') Add Article
				//a(href='/users/profile', style='margin:10px;') Profile
				
				span #{username}
			else
				button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/users/register'") Register
				button.btn.btn-outline-dark(type='button' onclick="javascript:location.href='/users/signin'") Log In
				
				
	div(style='padding:50px;')
		h1= title

	for article in blogs
		div
			div(style='float:left;margin-top:10px;')= article.Username
			div(style='float:right;margin-top:10px;')= article.CreateDate
			br
			div(style='clear:both')= article.Article
			div
				a(href='/apis/delete/'+article.id, style='float:right;margin-top:5px;margin-right:15px;') 
					button.btn.btn-outline-dark(type='button') Delete
				a(href='/users/modify/'+article.id, style='float:right;margin-top:5px;margin-right:20px;') 
					button.btn.btn-outline-dark(type='button') Modify
					
				
				
				
				
			hr(style='margin-top:30px;')