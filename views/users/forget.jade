doctype html
html
	head
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous") 
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title= 'Forget Password'
	body
		div(style='float:left;margin:10px;')
			a(href='/')
				button.btn.btn-outline-dark(type='button') Home

		div(style='float:right')
				a(href='/users/register', style='margin:10px;')
					button.btn.btn-outline-dark(type='button') Register
				a(href='/users/signin', style='margin:10px;')
					button.btn.btn-outline-dark(type='button') Log In
	
		div(style='padding:50px;')
			form(name="login", action="/apis/login", method="post")
				h1 Forget Password
				div
					p
						label(style='padding-right:80px') Username or E-mail
						input(type="text", name="user", placeholder='username@example.com')
				p
					span(style='padding-right:210px')
					input(type="submit", name="submit", value="Forget Password")